@model ShoppingApp.ViewModels.SubcategoryViewModel
@{
    ViewBag.Title = "SubcategoryForm";
}

<h2>Subcategory Form</h2>
<div class="container">
    @using (Html.BeginForm("Save", "Subcategory", FormMethod.Post, new { enctype = "multipart/form-data", @class= "form-horizontal form-label-left" }))
    {
        <div class="form-group item">
            @Html.LabelFor(m => m.Subcategory.Name, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-7 col-xs-12">
                @Html.TextBoxFor(m => m.Subcategory.Name, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Subcategory.Name)
        </div>
        <div class="form-group item">
            @Html.LabelFor(m => m.Subcategory.CategoryId, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-6 col-sm-6 col-xs-12">
                @Html.DropDownListFor(m => m.Subcategory.CategoryId, new SelectList(Model.Categories, "CategoryId", "Name"), "Select a Category", new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(m => m.Subcategory.CategoryId)
        </div>
        <div class="item form-group">
            @Html.LabelFor(m => m.ImageFileBase, new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
            <div class="col-md-3 col-sm-6 col-xs-12">
                <input onchange="readURL(this)" type="file" name="ImageFileBase" id="uploadFile" accept="image/*" data-rule-required="true" />
            </div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <img style="max-width: 250px;" src="@(!String.IsNullOrEmpty(Model.Subcategory.ImagePath)?Model.Subcategory.ImagePath:"")" id="featureImage"
                     alt="No Featured Image Added">
            </div>
            @Html.ValidationMessageFor(m => m.ImageFileBase)
        </div>
        <div class="ln_solid"></div>
        <div class="form-group">
            @Html.AntiForgeryToken()
            <div class="col-md-6 col-md-offset-3">
                <button type="submit" class="btn btn-success  btn-block">Store</button>
                <button type="reset" class="btn btn-warning  btn-block">Reset</button>
            </div>

        </div>
    }
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
