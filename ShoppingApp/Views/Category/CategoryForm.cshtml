@model ShoppingApp.ViewModels.CategoryViewModel
@{
    ViewBag.Title = "CategoryForm";
}

<h2>Category Form</h2>
<div class="container">
    @using (Html.BeginForm("Save", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="form-group">
            @Html.LabelFor(m=>m.Category.Name, new{@class="control-label"})
            @Html.TextBoxFor(m=>m.Category.Name, new{@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Category.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.ImageFileBase, new { @class = "control-label" })
            <input type="file" name="ImageFileBase" data-rule-required="true"/>
            @Html.ValidationMessageFor(m => m.ImageFileBase)
        </div>
        <div class="form-group">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Store</button>
            <button type="reset" class="btn btn-warning">Reset</button>
        </div>
    }
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
