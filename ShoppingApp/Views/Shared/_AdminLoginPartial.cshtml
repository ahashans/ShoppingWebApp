@using Microsoft.AspNet.Identity
<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @User.Identity.GetUserName() <b class="caret"></b></a>
    <ul class="dropdown-menu">
        <li>
            <a href="@Url.Action("Index","Manage")"><i class="fa fa-fw fa-user"></i> Profile</a>
        </li>
        <li class="divider"></li>
        <li>
            @if (Request.IsAuthenticated)
            {
                <form action="@Url.Action("LogOff", "Account")" method="post" id="logoutForm">
                    @Html.AntiForgeryToken()

                    <a id="logoff" href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                </form>
            }
        </li>
    </ul>
</li>
